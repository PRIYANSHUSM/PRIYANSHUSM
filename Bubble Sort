def Bubble(arr):
    
    for i in range(len(arr)):
        for j in range(1,len(arr)-i):
            if arr[j]<arr[j-1]:
                temp = arr[j]
                arr[j] = arr[j-1]
                arr[j-1] = temp
                
    
    return arr           


arr = [7,6,5,4,3,2,1]
Bubble(arr)
print(arr)
